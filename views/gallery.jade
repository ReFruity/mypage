extends layout.jade

block append stylesheets
    link(rel='stylesheet', href='/assets/stylesheets/gallery.css')

block scripts
    script(src="/assets/scripts/gallery.js", type="text/javascript")

block content
    div.gallery
        img.picture#0(src="/images/gallery/kyon1.jpg", alt="kyon1", onclick="onClick(event)")
        img.picture#1(src="/images/gallery/kyon2.jpg", alt="kyon2", onclick="onClick(event)")
        img.picture#2(src="/images/gallery/frusciante.jpg", alt="frusciante", onclick="onClick(event)")
        img.picture#3(src="/images/gallery/haruhi.jpg", alt="haruhi", onclick="onClick(event)")
