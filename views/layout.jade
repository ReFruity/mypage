doctype html
// TODO: Suppressed watches
html
    head
        link(type="image/png" rel="shortcut icon" href="/images/favicon.png")
        block stylesheets
            link(type='text/css', rel='stylesheet', href='/assets/stylesheets/layout.css')
        block scripts
            script(src="/assets/scripts/utils.js", type="text/javascript")
            script(src="/assets/scripts/init.js", type="text/javascript")
        title #{title}
        meta(charset="utf-8")
    body
        div.wrapper
            div.elemleft
                div.pencils
                    img.pencil1(src="/images/pencil.png", alt="pencil")
                    img.pencil2(src="/images/pencil.png", alt="pencil")
                //img.white-eraser(src="/images/white-eraser.png", alt="white-eraser")
                div.white-eraser
                    a.link(href="/feedback") Feedback
                div.black-eraser
            div.letter
                div.menu-wrapper
                    a.menu.link(href="/") HOME
                    a.menu.link(href="/about") ABOUT
                div.line
                block content
            div.elemright
                div.black-card
                    //div Total visits: #{counter.hits}
                    div Your visits: #{counter.visits}
                    div Your visits today: #{counter.today}
                    div Last visit: #{counter.last.toTimeString().slice(0,8)}
